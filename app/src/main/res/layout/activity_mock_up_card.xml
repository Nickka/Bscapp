<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.thinknick.bscapp.PrototypeOnsdag.mockUpCardActivity">



    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.CardView

        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="270dp"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="@android:color/holo_blue_dark"
        card_view:cardUseCompatPadding="true"

        card_view:cardElevation="8dp"

        >


        <TextView
            android:id="@+id/info_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Tema: hygge"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:paddingTop="45dp"
            android:textSize="36sp"
            android:elevation="10dp" />

        <TextView
            android:text="Deltagere: Magnus, Julie"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:id="@+id/textView2"
            android:textAlignment="center"
            android:layout_marginTop="125dp"
            android:textSize="24sp" />

        <TextView
            android:text="Tid tilbage: 4d, 13 t, 2 m. "
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:id="@+id/textView3"
            android:textAlignment="center"
            android:layout_marginTop="190dp"
            android:textSize="18sp" />

    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton

        android:id="@+id/fab"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:src="@drawable/ic_launcher"
        app:backgroundTint="?android:attr/colorActivatedHighlight"
        app:elevation="8dp"
        app:layout_anchor="@+id/card_view"
        app:layout_anchorGravity="bottom|right"
        app:fabSize="mini"
        android:layout_width="match_parent"
        app:srcCompat="@drawable/ic_forward_black_24dp" />

</android.support.design.widget.CoordinatorLayout>
